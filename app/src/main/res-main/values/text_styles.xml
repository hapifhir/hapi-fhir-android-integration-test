<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading_h1">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="heading_h2">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="heading_h3">
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textSize">@dimen/text_size_h0</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="heading_h2_white">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="content">
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textSize">@dimen/text_size_p2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="small_content">
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textSize">@dimen/text_size_p1</item>
    </style>
</resources>