<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_size_extra_large"
        android:background="@color/purple_900"
        android:gravity="center"
        style="@style/heading_h2_white"
        android:padding="@dimen/margin_size_small"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/pretty_print_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/minimum_dialog_height"
        android:padding="@dimen/margin_size_small"
        android:layout_below="@+id/title_view"/>

    <Button
        android:id="@+id/dismiss_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pretty_print_view"
        android:layout_margin="@dimen/margin_size_small"
        android:text="@string/patient_dialog_dismiss" />

</RelativeLayout>